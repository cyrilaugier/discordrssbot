{
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpro/grumphp": "^2.6",
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "^1.11"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "yamllint": "grumphp run --tasks yamllint",
        "phpcs": "grumphp run --tasks phpcs",
        "phpstan": "grumphp run --tasks phpstan"
    }
}
